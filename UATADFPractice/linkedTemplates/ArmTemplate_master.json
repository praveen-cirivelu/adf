{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "UATADFPractice"
		},
		"Input_Folder_Path_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'Input_Folder_Path'"
		},
		"SqlServerOnpremise_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'SqlServerOnpremise'"
		},
		"Azure_Sql_Database_Server_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'Azure_Sql_Database_Server'"
		},
		"Onprem_Practice_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'Onprem_Practice'"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "UATADFPractice_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"Input_Folder_Path_connectionString": {
						"value": "[parameters('Input_Folder_Path_connectionString')]"
					},
					"Azure_Sql_Database_Server_connectionString": {
						"value": "[parameters('Azure_Sql_Database_Server_connectionString')]"
					},
					"SqlServerOnpremise_connectionString": {
						"value": "[parameters('SqlServerOnpremise_connectionString')]"
					},
					"Onprem_Practice_connectionString": {
						"value": "[parameters('Onprem_Practice_connectionString')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "UATADFPractice_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'UATADFPractice_ArmTemplate_0')]"
			]
		}
	]
}